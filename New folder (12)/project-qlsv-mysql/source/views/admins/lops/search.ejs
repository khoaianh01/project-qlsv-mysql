<% layout('layouts/admin') %>
<div class="content-grid">
    <div class="content-margin">
        <div class="content-header">
            <div class="content-header__left">
                <p>Danh sách lop</p>
            </div>
            <div class="content-header__right">
                <a href="/lop/add">
                    <button class="add">Thêm mới</button>
                    <i class='bx bx-message-alt-add'></i>
                </a>
            </div>
        </div>
        <div class="content-search">
            <div class="content-form">
                <form action="/lop/search"  method="POST">
                    <input type="text" name="nameL"  placeholder="tìm kiếm tên lop">
                    <div class="content-button">
                        <button>
                            tìm kiếm
                         </button>
                         <i class='bx bx-search-alt-2' ></i>
                    </div>
                   
                </form>
            </div>
           
        </div>
        <div class="content-table">
            <div>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Tên Lop</th>
                        <th>thao tác</th>
                    </tr>
                    
                    <tr>
                        <td >1</td>
                        <td ><%= lop.nameL %></td>
                        <td >
                            <a href="/lop/edit/<%= lop.id%>"><button onclick="onEdit()" class="btn btn-primary"><i class='bx bxs-edit'></i></button></a>
                            <form action="/lop/delete/<%= lop.id%>?_method=DELETE" method="POST" style="display: inline;"><button><i class='bx bx-trash'></i></button></form>
                        </td>
                    </tr>
                   
                </table>
            </div>
        </div>
    </div>
</div>
