<% layout('layouts/admin') %>
<div class="content-grid">
    <div class="content-margin">
        <div class="content-header">
            <div class="content-header__left">
                <p>Danh sách student</p>
            </div>
            <div class="content-header__right">
                <a href="/student/add">
                    <button class="add">Thêm mới</button>
                    <i class='bx bx-message-alt-add'></i>
                </a>
            </div>
        </div>
        <div class="content-search">
            <div class="content-form">
                <form action="/student/search" method="POST">
                    <input type="text" name="name"  placeholder="tìm kiếm tên student" >
                    <div class="content-button">
            
                        <button>
                            tìm kiếm
                         </button>
                         <i class='bx bx-search-alt-2' ></i>
               
                    </div>
                   
                </form>
            </div>
           
        </div>
        <div class="content-table">
            <div>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Tên Sinh viên</th>
                        <th>email</th>
                        <th>gender</th>
                        <th>ngaysinh</th>
                        <th>tên lớp</th>
                    
                        <th>thao tác</th>
                    </tr>
                    <% let i=0 %>
                    <% for(let student of students){%>
                    <% i++%>
                    <tr>
                        <td ><%= i %></td>
                        <td ><%= student.name %></td>
                        <td ><%= student.email %></td>
                        <td ><%= student.gender %></td>
                        <td ><%= student.ngaysinh %></td>
                        <td><%= student.Lop.nameL%></td>
                    
                        <td >
                            <a href="/student/edit/<%= student.id%>"><button onclick="onEdit()" class="btn btn-primary"><i class='bx bxs-edit'></i></button></a>
                            <form action="/student/delete/<%= student.id%>?_method=DELETE" method="POST" style="display: inline;"><button><i class='bx bx-trash'></i></button></form>
                        </td>
                    </tr>
                    <%}%>    
                </table>
            </div>
        </div>
    </div>
</div>
