<% layout('layouts/admin') %>
<div class="content-grid">
    <div class="content-margin">
        <div class="content-header">
            <div class="content-header__left">
                <p>Danh sách teacher</p>
            </div>
            <div class="content-header__right">
                <a href="/teacher/add">
                    <button class="add">Thêm mới</button>
                    <i class='bx bx-message-alt-add'></i>
                </a>
            </div>
        </div>
        <div class="content-search">
            <div class="content-form">
                <form action="/teacher/search"  method="POST">
                    <input type="text" name="nameT"  placeholder="tìm kiếm tên teacher">
                    <div class="content-button">
                        <button>
                            tìm kiếm
                         </button>
                         <i class='bx bx-search-alt-2' ></i>
                    </div>
                   
                </form>
            </div>
           
        </div>
        <div class="content-table">
            <div>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Tên giáo viên</th>
                        <th>trình độ</th>
                        <th>phone</th>
                        <th>tên Khoa</th>
                        <th>thao tác</th>
                    </tr>
                    
                    <tr>
                        <td >1</td>
                      
                        <td ><%= teacher.nameT %></td>
                        <td ><%= teacher.trinhdo %></td>
                        <td ><%= teacher.phone %></td>
                        <td><%= teacher.Khoa.nameK%></td>   
                        <td >
                            <a href="/teacher/edit/<%= teacher.id%>"><button onclick="onEdit()" class="btn btn-primary"><i class='bx bxs-edit'></i></button></a>
                            <form action="/teacher/delete/<%= teacher.id%>?_method=DELETE" method="POST" style="display: inline;"><button><i class='bx bx-trash'></i></button></form>
                        </td>
                    </tr>
                   
                </table>
            </div>
        </div>
    </div>
</div>
