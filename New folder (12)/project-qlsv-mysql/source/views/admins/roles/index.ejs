<% layout('layouts/admin') %>
<div class="content-grid">
    <div class="content-margin">
        <div class="content-header">
            <div class="content-header__left">
                <p>Danh sách role</p>
            </div>
            <div class="content-header__right">
                <a href="/role/add">
                    <button class="add">Thêm mới</button>
                    <i class='bx bx-message-alt-add'></i>
                </a>
            </div>
        </div>
        <div class="content-search">
            <div class="content-form">
                <form action="/role/search" method="POST">
                    <input type="text" name="nameL"  placeholder="tìm kiếm tên role" >
                    <div class="content-button">
            
                        <button>
                            tìm kiếm
                         </button>
                         <i class='bx bx-search-alt-2' ></i>
               
                    </div>
                   
                </form>
            </div>
           
        </div>
        <div class="content-table">
            <div>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Tên Role</th>
                        <th>thao tác</th>
                    </tr>
                    <% let i=0 %>
                    <% for(let role of roles){%>
                    <% i++%>
                    <tr>
                        <td ><%= i %></td>
                        <td ><%= role.nameR %></td>
                        <td >
                            <a href="/role/edit/<%= role.id%>"><button onclick="onEdit()" class="btn btn-primary"><i class='bx bxs-edit'></i></button></a>
                            <form action="/role/delete/<%= role.id%>?_method=DELETE" method="POST" style="display: inline;"><button><i class='bx bx-trash'></i></button></form>
                        </td>
                    </tr>
                    <%}%>    
                </table>
            </div>
        </div>
    </div>
</div>
